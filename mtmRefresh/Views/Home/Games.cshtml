@model Game
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="row">
        <div class="col-sm-5">
            <h2>Add a Game</h2>
            <form asp-action="AddGame" method="post">
                <div class="form-group">
                    <label for="GameName">Game Name</label>
                    <input asp-for="GameName" class="form-control">
                    <span asp-validation-for="GameName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Rating">Game Rating</label>
                    <input asp-for="Rating" class="form-control">
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <input type="submit" value="Add Game" class="btn btn-primary">
            </form>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <h2>All the Games</h2>
            @{
                foreach(Game g in ViewBag.AllGames)
                {
                    <p><a href="/Game/@g.GameId">@g.GameName</a></p>
                }
            }
        </div>
    </div>
</div>