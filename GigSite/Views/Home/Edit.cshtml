@model Gig
<h1>Edit Gig</h1>
<form action="/UpdateGig/@ViewBag.Gig.GigId" method="post">
    <div class="form-group">
        <label for="Title">Gig Title</label>
        <input asp-for="Title" class="form-control" value="@ViewBag.Gig.Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Gig Description</label>
        <input asp-for="Description" class="form-control" value="@ViewBag.Gig.Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Gig Price</label>
        <input asp-for="Price" class="form-control" value="@ViewBag.Gig.Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DeliveryTime">Gig Delivery Time</label>
        <input asp-for="DeliveryTime" class="form-control" value="@ViewBag.Gig.DeliveryTime">
        <span asp-validation-for="DeliveryTime" class="text-danger"></span>
    </div>
    <input type="submit" value="Add Gig" class="btn btn-primary">
</form>