@model Gig
<h1>Add a Gig</h1>
<form asp-action="CreateGig" method="post">
    <div class="form-group">
        <label for="Title">Gig Title</label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Gig Description</label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Gig Price</label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DeliveryTime">Gig Delivery Time</label>
        <input asp-for="DeliveryTime" class="form-control">
        <span asp-validation-for="DeliveryTime" class="text-danger"></span>
    </div>
    <input type="submit" value="Add Gig" class="btn btn-primary">
</form>